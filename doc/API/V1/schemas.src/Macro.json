{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "Macro.json",
  "type": "object",
  "description": "The macro object.",
  "properties": {
    "Actions": {
      "type": "array",
      "description": "added via include \"Actions\"",
      "readOnly": true,
      "items": {
        "$ref": "MacroAction.json"
      }
    },
    "ChangeBy": {
      "type": "integer",
      "readOnly": true
    },
    "ChangeTime": {
      "type": "string",
      "readOnly": true
    },
    "Comment": {
      "type": "string",
      "readOnly": true
    },
    "CreateBy": {
      "type": "integer",
      "readOnly": true
    },
    "CreateTime": {
      "type": "string",
      "readOnly": true
    },
    "ExecOrder": {
      "type": "array",
      "readOnly": true,
      "items": {
        "type": "integer"
      },
      "description": "Order of corresponding macro actions as IDs."
    },
    "ID": {
      "type": "integer",
      "readOnly": true
    },
    "Name": {
      "type": "string",
      "readOnly": true
    },
    "Type": {
      "type": "string",
      "readOnly": true
    },
    "ValidID": {
      "type": "integer",
      "readOnly": true
    }
  },
  "required": [
    "ChangeBy",
    "ChangeTime",
    "CreateBy",
    "CreateTime",
    "ID",
    "Name",
    "Type",
    "ValidID"
  ]
}